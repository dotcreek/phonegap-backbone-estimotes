<%= JST[ 'app/scripts/templates/partials/_navigation.ejs']({ nav: 'rooms' }) %>

<div class="content">
    <ul class="table-view">
        <% collection.forEach(function(item){ %>
            <li class="table-view-cell media">
                <a class="navigate-right" href='#rooms/<%= item.get("id")%>'>
                    <div class="media-body">
                        <%=item.get( 'name') %>

                        <% if(item.currentEvent){ %>
                            <p>Current event: <%= item.currentEvent.content.description %></p>
                        <% }else{ %>
                            <p>No Current Event</p>
                        <% } %>

                        <% if(!_.isEmpty(item.get('upcoming'))){ %>
                            <p>Upcoming Event: <%- item.upcomming[0].content.description %></p>
                        <% }else{ %>
                            <p>No Upcoming Events</p>
                        <% } %>
                    </div>
                </a>
            </li>
        <% }) %>
    </ul>
</div>
