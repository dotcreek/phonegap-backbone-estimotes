<header class="bar bar-nav">
    <button class="btn btn-link btn-back btn-nav pull-left">
        <span class="icon icon-left-nav"></span>
        Back
    </button>
    <h1 class="title"><%= model.get("name") %></h1>
</header>

<div class="content">
   <ul class="table-view">

        <% if(model.currentEvent){ %>

            <li class="table-view-cell table-view-divider">
                <%t ('rooms.current') %>
            </li>
            <li class="table-view-cell media">
                <a class="" href='#rooms/<%= model.get("id")%>'>
                    <div class="media-body">
                        <p> <%= model.currentEvent || 'No Current Event :(' %> </p>
                    </div>
                </a>
            </li>

        <% } %>

        <% if(model.upcomming.length){ %>

            <li class="table-view-cell table-view-divider">
                <%t ('rooms.upcomming') %>
            </li>

            <% model.upcomming.forEach(function (event) { %>
                <li class="table-view-cell media">
                    <%- event.title %>
                </li>
            <% }) %>

        <% } else { %>
            <li class="table-view-cell table-view-divider">
                Nothing to display
            </li>
        <% } %>

    </ul>
</div>


